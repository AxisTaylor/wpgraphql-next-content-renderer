{
    "compilerOptions": {
      "allowJs": true,
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "isolatedModules": true,
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
    },
    "include": ["src/**/*.ts", "src/**/*.tsx",],
    "exclude": [
      "node_modules/**/*",
      "src/**/*.spec.ts",
      "src/**/*.spec.tsx",
    ]
  }